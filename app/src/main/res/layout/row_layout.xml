<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!--Primary Image View-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/imageView_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageView_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="200dp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:gravity="top"
                android:padding="8dp"
                android:text="i"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/play"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:gravity="bottom"
                android:padding="8dp"
                android:text=">"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/information" />

        </android.support.constraint.ConstraintLayout>

        <!--Main Text and More Image-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!--Secondary Image - default view - hidden -->
            <ImageView
                android:id="@+id/imageView_secondary"
                android:layout_width="0dp"
                android:layout_height="88dp"
                android:layout_weight="2"
                android:visibility="gone" />

            <!--Nep-Dev-Eng Words/Letter-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:orientation="vertical"
                android:paddingBottom="8dp">

                <!--Devnagari Textview-->
                <TextView
                    android:id="@+id/dev_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:text="देवनागरी लिपी"
                    android:textSize="60sp" />

                <!--Nepali Textview-->
                <TextView
                    android:id="@+id/nep_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="top"
                    android:text="Nepali"
                    android:textStyle="italic" />

                <!--English Textview-->
                <TextView
                    android:id="@+id/eng_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="English" />


            </LinearLayout>

            <!--Audio Play-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/audio_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#cfd8dc"
                    android:focusable="false"
                    android:maxWidth="16dp"
                    android:src="@drawable/ic_play_arrow"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <!--More-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <!--Additional Details-->
            <LinearLayout
                android:id="@+id/additional_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingEnd="8dp"
                        android:text="aspiration" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingEnd="8dp"
                        android:text="name" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingEnd="8dp"
                        android:text="pronunciation" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingEnd="8dp"
                        android:text="approximate\n pronunciation" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/aspiration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="velars" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="kakara" />

                    <TextView
                        android:id="@+id/pronunciation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="ka /ka/" />

                    <TextView
                        android:id="@+id/apprx_pronunciation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:text="Kin, Kate, College" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/compounds_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#b0bec5"
                        android:focusable="false"
                        android:maxWidth="16dp"
                        android:src="@drawable/ic_play_arrow"
                        android:visibility="visible" />

                </LinearLayout>


            </LinearLayout>

            <!--Compounds-->
            <HorizontalScrollView
                android:id="@+id/compounds"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:scrollbars="horizontal"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--Compound Letter 01-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/compound_main_01"
                        android:focusable="false"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/compound_dev_01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="क"
                            android:textSize="120sp" />

                        <TextView
                            android:id="@+id/compound_nep_01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="ka"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <!--Compound Letter 02-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/compound_main_02"
                        android:focusable="false"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/compound_dev_02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="का"
                            android:textSize="120sp" />

                        <TextView
                            android:id="@+id/compound_nep_02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="kaa"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <!--Compound Letter 03-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/compound_main_03"
                        android:focusable="false"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/compound_dev_03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="कि"
                            android:textSize="120sp" />

                        <TextView
                            android:id="@+id/compound_nep_03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="ki"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <!--Compound Letter 04-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/compound_main_04"
                        android:focusable="false"
                        android:paddingEnd="4dp"
                        android:paddingStart="4dp">

                        <TextView
                            android:id="@+id/compound_dev_04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="की"
                            android:textSize="120sp" />

                        <TextView
                            android:id="@+id/compound_nep_04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="kee"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <!--Compound Letter 05-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/compound_main_05"
                        android:focusable="false"
                        android:paddingEnd="4dp"
                        android:paddingStart="4dp">

                        <TextView
                            android:id="@+id/compound_dev_05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="कु"
                            android:textSize="120sp" />

                        <TextView
                            android:id="@+id/compound_nep_05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="ku"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <!--Compound Letter 06-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/compound_main_06"
                        android:focusable="false"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/compound_dev_06"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="कू"
                            android:textSize="120sp" />

                        <TextView
                            android:id="@+id/compound_nep_06"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="kuu"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <!--Compound Letter 07-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/compound_main_07"
                        android:focusable="false"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/compound_dev_07"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="के"
                            android:textSize="120sp" />

                        <TextView
                            android:id="@+id/compound_nep_07"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="kae"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <!--Compound Letter 08-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/compound_main_08"
                        android:focusable="false"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/compound_dev_08"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="कै"
                            android:textSize="120sp" />

                        <TextView
                            android:id="@+id/compound_nep_08"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="kai"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <!--Compound Letter 09-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/compound_main_09"
                        android:focusable="false"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/compound_dev_09"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="काे"
                            android:textSize="120sp" />

                        <TextView
                            android:id="@+id/compound_nep_09"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="ko"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <!--Compound Letter 10-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/compound_main_10"
                        android:focusable="false"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/compound_dev_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="काै"
                            android:textSize="120sp" />

                        <TextView
                            android:id="@+id/compound_nep_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="kou"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <!--Compound Letter 11-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/compound_main_11"
                        android:focusable="false"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/compound_dev_11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="कं"
                            android:textSize="120sp" />

                        <TextView
                            android:id="@+id/compound_nep_11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="kam"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <!--Compound Letter 12-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/compound_main_12"
                        android:focusable="false"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/compound_dev_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="क:"
                            android:textSize="120sp" />

                        <TextView
                            android:id="@+id/compound_nep_12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="kah"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>


