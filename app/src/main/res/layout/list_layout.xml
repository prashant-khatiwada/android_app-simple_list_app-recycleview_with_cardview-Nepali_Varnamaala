<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="6dp"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!--Primary Image View-->
        <ImageView
            android:id="@+id/imageView_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:minHeight="200dp"
            android:visibility="visible" />

        <!--Main Text and Secondary Image-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <!--Secondary Image - default view - hidden -->
            <ImageView
                android:id="@+id/imageView_secondary"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:visibility="gone" />

            <!--Nep-Dev-Eng Words/Letter-->
            <LinearLayout
                android:id="@+id/letter_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:orientation="vertical"
                android:paddingBottom="8dp">

                <!--Devnagari Textview-->
                <TextView
                    android:id="@+id/dev_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:text="à¤‹"
                    android:textSize="200sp" />

                <!--Nepali Textview-->
                <TextView
                    android:id="@+id/nep_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="top"
                    android:text="Nepali"
                    android:textStyle="italic" />

                <!--English Textview-->
                <TextView
                    android:id="@+id/eng_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="English" />

            </LinearLayout>




        </LinearLayout>

        <!--Additional Details-->
        <LinearLayout
            android:id="@+id/additional_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <!--aspiration Details-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/aspiration_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingEnd="8dp"
                    android:text="aspiration" />

                <TextView
                    android:id="@+id/aspiration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:text="velars" />
            </LinearLayout>

            <!--name Details-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/name_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingEnd="8dp"
                    android:text="name" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:text="kakara" />
            </LinearLayout>

            <!--pronunciation Details-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/pronunciation_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingEnd="8dp"
                    android:text="pronunciation" />

                <TextView
                    android:id="@+id/pronunciation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:text="ka/ka/" />
            </LinearLayout>

            <!--approximate Details-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/apprx_pronunciation_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:paddingEnd="8dp"
                    android:text="approx. \n pronunciation" />

                <TextView
                    android:id="@+id/apprx_pronunciation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:text="Kate, Kin, College" />
            </LinearLayout>

        </LinearLayout>

        <!--Draw Icon-->
        <ImageView
            android:id="@+id/draw_btn"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="50dp"
            android:focusable="false"
            android:src="@drawable/btn_draw"
            android:visibility="gone" />

        <!--Vertical More Icon-->
        <ImageView
            android:id="@+id/additional_details_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:focusable="false"
            android:src="@drawable/icon_expand"
            android:visibility="visible" />


    </LinearLayout>

</android.support.v7.widget.CardView>


